{
	"name": "node-backend-template",
	"version": "1.0.0",
	"description": "template for node-typescript-expressjs with pm2",
	"main": "index.js",
	"author": "stilyng94",
	"license": "MIT",
	"scripts": {
		"build": "rm -rf ./dist && tsc",
		"lint": "prettier --write --ignore-unknown . && eslint --fix --ext src/*.{js,ts}",
		"start": "pm2-runtime ecosystem.config.js --json --only api",
		"dev": "set DEBUG=api:* && nodemon -L ./src/index.ts",
		"prepare": "husky install",
		"test": "set DEBUG=api:* && jest"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-conventional": "^17.1.0",
		"@types/cors": "^2.8.12",
		"@types/debug": "^4.1.7",
		"@types/express": "^4.17.14",
		"@types/jest": "^29.1.2",
		"@types/multer": "^1.4.7",
		"@types/node": "^18.8.0",
		"@types/nodemailer": "^6.4.6",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.39.0",
		"eslint": "^8.0.1",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard-with-typescript": "^23.0.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-n": "^15.0.0",
		"eslint-plugin-promise": "^6.0.0",
		"husky": "^8.0.1",
		"jest": "^29.1.2",
		"lint-staged": "^13.0.3",
		"nodemon": "^2.0.20",
		"pino-pretty": "^9.1.0",
		"prettier": "^2.7.1",
		"ts-jest": "^29.0.3",
		"ts-node": "^10.9.1",
		"typescript": "*"
	},
	"dependencies": {
		"@sentry/node": "^7.14.1",
		"cors": "^2.8.5",
		"debug": "^4.3.4",
		"dotenv": "^16.0.3",
		"express": "^4.18.1",
		"express-rate-limit": "^6.6.0",
		"express-validator": "^6.14.2",
		"helmet": "^6.0.0",
		"multer": "^1.4.5-lts.1",
		"nodemailer": "^6.8.0",
		"pino": "^8.6.1",
		"pino-http": "^8.2.1",
		"pino-sentry-transport": "^0.0.6"
	},
	"engines": {
		"node": ">=16.16.0"
	},
	"engineStrict": true,
	"lint-staged": {
		"src/*.{js,ts}": [
			"yarn lint"
		]
	}
}
