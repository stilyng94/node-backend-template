{
	"compilerOptions": {
		"target": "es2016",
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"rootDir": "src",
		"outDir": "dist",
		"lib": ["ESNext"],
		"allowJs": true,
		"checkJs": false,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"extends": "@tsconfig/recommended/tsconfig.json",
	"exclude": ["node_modules"],
	"ts-node": {
		"transpileOnly": true,
		"files": true
	},
	"typeRoots": ["./src/@types", "./node_modules/@types"]
}
