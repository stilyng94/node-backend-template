{
	"compilerOptions": {
		"target": "es2016",
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"rootDir": "src",
		"outDir": "dist",
		"lib": ["es2021"],
		"allowJs": true,
		"checkJs": false,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"typeRoots": ["./src/types", "./node_modules/@types"]
}
